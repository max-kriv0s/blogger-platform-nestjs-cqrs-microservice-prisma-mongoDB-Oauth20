{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/root(.*)$": "<rootDir>/src$1",
    "^@libs(.*)$": "<rootDir>/../../../libs$1"
  },
  "testTimeout": 15000
}
